{
  "name": "projectc-commerce",
  "version": "1.0.0",
  "description": "E-commerce platform with analytics dashboard",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "deploy:build": "npm run install-all && npm run build",
    "docker:build": "docker build -t projectc-commerce .",
    "docker:run": "docker run -p 5000:5000 projectc-commerce"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

